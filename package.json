{
  "name": "brainhack_western_website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "schema-gen": "npx typescript-json-schema ./tsconfig.json SiteConfig --required -o public/schemas/brainhack-config.json",
    "lint": "next lint",
    "compile-calendar": "pipx run --spec git+https://github.com/pvandyken/overlapping-events.git calendar-stack config.yaml -o calendar.json",
    "gh-build": "npm run compile-calendar && rm -rf node_modules/.cache && next build && next export && touch out/.nojekyll",
    "deploy": "npm run gh-build && git stash && git add -f out && git commit -m 'Deploying' && git subtree split --prefix out -b gh-pages && git push -f origin gh-pages:gh-pages && git branch -D gh-pages && git reset HEAD~1 && git stash pop && rm -rf out",
    "preinstall": "python3 --version | grep -Eq '[\\w\\s]*3\\.(8|9|10)\\.[0-9]+' || (echo 'Must have python 3.8, 3.9, or 3.10 installed and active' && exit 1)",
    "postinstall": "([ -d .venv ] || python3 -m venv .venv) && .venv/bin/python -m pip install ../overlapping-events"
  },
  "dependencies": {
    "@tylermenezes/cognitoforms-react": "github:pvandyken/cognitoforms-react",
    "@vanilla-extract/css": "^1.9.1",
    "@vanilla-extract/sprinkles": "^1.5.0",
    "bootstrap": "^5.1.3",
    "color-interpolate": "^1.0.5",
    "color2k": "^2.0.0",
    "email-validator": "^2.0.4",
    "hypertag": "^0.0.6",
    "image-size": "^1.0.2",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "next": "^12.2.5",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-markdown": "^7.0.1",
    "react-obfuscate": "^3.6.8",
    "remark-gfm": "^3.0.0",
    "sass": "^1.42.1",
    "ts-debounce": "^3.0.0",
    "word-join": "^0.0.1"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.3.1",
    "@types/bootstrap": "^5.1.6",
    "@types/color": "^3.0.2",
    "@types/js-yaml": "^4.0.3",
    "@types/lodash": "^4.14.183",
    "@types/react": "17.0.27",
    "@vanilla-extract/next-plugin": "^2.1.1",
    "eslint": "^7.32.0",
    "eslint-config-next": "11.1.2",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.7.1",
    "typescript": "4.4.3",
    "typescript-json-schema": "^0.51.0"
  }
}
